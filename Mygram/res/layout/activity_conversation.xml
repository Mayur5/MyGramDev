<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="me.mygram.views.MainActivity"
    tools:ignore="MergeRootFrame">
    
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:background="#ffffff">
        
        <ImageView
            android:id="@+id/title_bar_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/hello_world" />
        
        <ImageView 
	        android:id="@+id/conversation_correspondent_profile_pic"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_toRightOf="@id/title_bar_logo"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="10dp"
	        android:contentDescription="@string/go" />  
	        
        <TextView 
            android:id="@+id/conversation_correspondent_name" 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/conversation_correspondent_profile_pic"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp" />         
        <ImageView
            android:id="@+id/title_bar_hamburger"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/hamburger_icon_temp"
            android:contentDescription="@string/hello_world" />
        
    </RelativeLayout>    

    <ListView 
	    android:id="@+id/conversationView"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1" /> 
    
<!--     <EditText  -->
<!--         android:id="@+id/compose_edit_text" -->
<!--         android:layout_width="fill_parent" -->
<!-- 		android:layout_height="wrap_content" -->
<!-- 		android:inputType="none" -->
<!-- 		android:scrollHorizontally="true" -->
<!--         android:hint="@string/compose_hint" -->
<!--         android:imeOptions="actionSend"/> -->
    
    <LinearLayout
        android:id="@+id/compose_button_bar"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:weightSum="4" >
        
        <Button 
	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
        	android:text="@string/image_reply"
        	android:layout_weight="1"
        	android:background="@drawable/orange_button"
        	style="@style/button_text"
        	android:onClick="goToConversation" />   
        
    	<Button 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/pictogram_reply"
        	android:layout_weight="1"
        	android:background="@drawable/orange_button"
        	style="@style/button_text"
        	android:onClick="goToConversation" />   
        
    	<Button 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/file_reply"
        	android:layout_weight="1"
        	android:background="@drawable/orange_button"
        	style="@style/button_text"
        	android:onClick="goToConversation" /> 
        	
    	<Button 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/text_reply"
        	android:layout_weight="1"
        	android:background="@drawable/orange_button"
        	style="@style/button_text"
        	android:onClick="goToConversation" /> 
        	  
        	
	</LinearLayout>
	
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/orange_button"
        style="@style/button_text"
        android:text="@string/go" /> 
    
</LinearLayout>

