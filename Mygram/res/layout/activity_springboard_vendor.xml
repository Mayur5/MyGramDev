<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.mygram.views.SpringboardVendorActivity"
    tools:ignore="MergeRootFrame"  >
    
    <TextView 
        android:id="@+id/activity_springboard_vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor Page"/>
    
    <EditText 
        android:id="@+id/activity_springboard_vendor_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="text"
        android:hint="enter anything" />
    <Button 
        android:id="@+id/activity_springboard_vendor_input_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/go"
        style="@drawable/orange_button"
        android:onClick="submitInput"/>

</LinearLayout>
